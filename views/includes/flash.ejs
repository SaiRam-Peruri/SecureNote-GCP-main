<div class="d-flex flex-col justify-content-center">
  <!-- Success Flash -->
  <% if(success && success.length) { %>
  <div
    class="alert text-break alert-success alert-dismissible fade show col-12 col-md-6"
    role="alert"
  >
    <%=success%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>

  <!-- Deleted Flash -->
  <% if(deleted && deleted.length) { %>
  <div
    class="alert text-break alert-danger alert-dismissible fade show col-12 col-md-6"
    role="alert"
  >
    <%=deleted%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>

  <!-- Error Flash -->
  <% if(error && error.length) { %>
  <div
    class="alert text-break alert-warning alert-dismissible fade show col-12 col-md-6"
    role="alert"
  >
    <%=error%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
</div>
